<% include partials/header.ejs %>

    <div class="row auth-page">

        <div class="col-md-12">
            <h1><%= title %></h1>
        </div>

        <div class="col-md-12 auth-form">
            <form method="post">
                <fieldset class="form-group">
                    <label for="username" class="col-sm-2 control-label">Email: *</label>
                    <input name="username" id="username" required type="email" class="form-control"/>
                </fieldset>
                <fieldset class="form-group">
                    <label for="password" class="col-sm-2 control-label">Password: *</label>
                    <input name="password" id="password" type="password" required class="form-control"/>
                </fieldset>
                <fieldset class="form-group">
                    <label for="confirm" class="col-sm-2 control-label">Confirm: *</label>
                    <input name="confirm" id="confirm" type="password" required class="form-control"/>
                </fieldset>
                <fieldset class="form-group">
                    <button class="btn btn-success">Register</button>
                    <hr />
                    Already have an account?  <a href="/login" title="Login">Login</a>
                </fieldset>
            </form>
        </div>

    </div>  

<% include partials/footer.ejs %>